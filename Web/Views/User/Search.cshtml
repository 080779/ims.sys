<body>
    <div id="app">
        <div class="add_menber" id="add_menber_style">
            <ul class="page-content">
                <li><label class="label_name"><select v-model="type"><option value="">请选择类型</option><option value="mobile">客户账号</option><option value="code">会员编号</option></select></label><span class="add_name"><input value="" placeholder="客户账号/会员编号" v-model="code" type="text" class="text_add" /></span><div class="prompt r_f"></div><input type="button" v-on:click="btnCode" value="提交" class="text_add" /></li>
                <li><label class="label_name">支付密码：</label><span class="add_name"><input placeholder="支付密码" name="支付密码" type="password" v-model="password" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li>用户实时积分<p v-html="integral"></p></li>
            </ul>
        </div>
    </div>
</body>
