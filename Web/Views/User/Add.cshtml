<body>
    <div id="app">
        <div class="add_menber" id="add_menber_style">
            <ul class="page-content">
                <li><label class="label_name">客户账号：</label><span class="add_name"><input value="" placeholder="客户账号手机号" v-model="mobile" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">会员编号：</label><span class="add_name"><input value="" placeholder="会员编号" v-model="code" type="text" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">交易密码：</label><span class="add_name"><input placeholder="交易密码" type="password" v-model="password" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name">确认密码：</label><span class="add_name"><input placeholder="确认密码" type="password" v-model="password1" class="text_add" /></span><div class="prompt r_f"></div></li>
                <li><label class="label_name"><a v-on:click="btnSave" class="btn btn-xs btn-info">新增用户</a></label></li>
            </ul>
        </div>
    </div>    
</body>
</html>
<script type="text/javascript">
    var vue = new Vue({
        el: "#app",
        data: {
            mobile: "", code: "", password: "", password1: ""
        },
        methods: {
            btnSave: function () {
                if (this.mobile == "") {
                    layer.alert('客户账号不能为空', { icon: 0, tilte: '提示框' });
                    return;
                }
                var reg = /^1\d{10}$/;
                if (!reg.test(this.mobile)) {
                    layer.alert('客户账号手机号码格式不正确', { icon: 0, tilte: '提示框' });
                    return;
                }
                if (this.code == "") {
                    layer.alert('会员编号不能为空', { icon: 0, tilte: '提示框' });
                    return;
                }
                if (this.password == "") {
                    layer.alert('交易密码不能为空', { icon: 0, tilte: '提示框' });
                    return;
                }
                if (this.password.length < 6 || this.password.length > 8) {
                    layer.alert('请输入6-8位密码', { icon: 0, tilte: '提示框' });
                    return;
                }
                if (this.password != this.password1) {
                    layer.alert('两次密码不一致', { icon: 0, tilte: '提示框' });
                    return;
                }
                this.$http.post('/user/add', { mobile: this.mobile, code: this.code, password: this.password }, { emulateJSON: true }).then(function (result) {
                    if (result.data.status == 1) {
                        layer.alert(result.data.msg, { icon: 6, tilte: '提示框' });
                        this.mobile = "";
                        this.code = "";
                        this.password = "";
                        this.password1 = "";
                    }
                    else if (result.data.status == 0) {
                        layer.alert(result.data.msg, { icon: 0, tilte: '提示框' });
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                    else {
                        layer.alert('未知错误', { icon: 0, tilte: '提示框' });
                    }                    
                });
            }
        }
    });
</script>
