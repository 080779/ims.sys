<script type="text/javascript">
    var startTime;
    var endTime;
    var vue = new Vue({
        el: "#app",
        data: {
            mobile: "", class: "", pages: [], uppage: 1, nextpage: 2, platformUsers: [],
            pagecount: 1, add_mobile: "", add_code: "", add_password: "", add_tradepassword: ""
        },
        methods: {
            search: function () {
                startTime = $("#startTime").val();
                endTime = $("#endTime").val();
                this.$http.post('/admin/merchant/list', { mobile: this.mobile, startTime: startTime, endTime: endTime, pageIndex: 1 }, { emulateJSON: true }).then(function (result) {                    
                    if (result.data.status == 1) {
                        this.platformUsers = result.data.data.platformUsers;
                        this.pageHtml = result.data.data.pageHtml;
                        this.pages = result.data.data.pages;
                        this.pagecount = result.data.data.pageCount;
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                });
            },
            getPage: function (page) {
                if (page == 1) {
                    this.uppage = 1;
                    this.nextpage = 2;
                }
                else if (page > 1) {
                    this.uppage = page - 1;
                    if (this.nextpage < this.pagecount) {
                        this.nextpage = page + 1;
                    }
                    else {
                        this.nextpage = this.pagecount;
                    }
                }
                startTime = $("#startTime").val();
                endTime = $("#endTime").val();
                this.$http.post('/admin/merchant/list', { mobile: this.mobile, startTime: startTime, endTime: endTime, pageIndex: page }, { emulateJSON: true }).then(function (result) {                    
                    if (result.data.status == 1) {
                        this.platformUsers = result.data.data.platformUsers;
                        this.pageHtml = result.data.data.pageHtml;
                        this.pages = result.data.data.pages;
                        this.pagecount = result.data.data.pageCount;
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                });
            },
            member_add: function () {
                var that = this;
                layer.open({
                    type: 1,
                    title: '添加客户',
                    maxmin: true,
                    shadeClose: false, //点击遮罩关闭层
                    area: ['600px', ''],
                    content: $('#add_menber_style'),
                    btn: ['确认', '取消'],
                    yes: function (index, layero) {
                        that.$http.post('/admin/merchant/add', { mobile: that.add_mobile, code: that.add_code, password: that.add_password, tradePassword: this.add_tradepassword }, { emulateJSON: true }).then(function (result) {
                            if (result.data.status == 1) {
                                layer.alert(result.data.msg, { icon: 6, title: '提示框' });
                                layer.close(index);
                                window.parent.location.reload();
                            }
                            else if (result.data.status == 0) {
                                layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                                //that.msg = result.data.msg;
                            }
                            else if (result.data.status == 302) {
                                window.location.href = result.data.data;
                            }
                        });
                    }
                });
            },
            del: function (id) {
                var that = this;
                layer.confirm("确定要删除吗？", function (index) {
                    that.$http.post('/admin/merchant/del', { id: id }, { emulateJSON: true }).then(function (result) {
                        if (result.data.status == 1) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' }, function () {
                                layer.close(index);
                                window.parent.location.reload();
                            });
                        }
                        else if (result.data.status == 0) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            //that.msg = result.data.msg;
                        }
                        else if (result.data.status == 302) {
                            window.location.href = result.data.data;
                        }
                    });
                });
            },
            frozen: function (id) {
                var that = this;
                layer.confirm("确定要冻结吗？", function (index) {
                    that.$http.post('/admin/merchant/frozen', { id: id }, { emulateJSON: true }).then(function (result) {
                        if (result.data.status == 1) {
                            layer.alert(result.data.msg, { icon: 6, title: '提示框' }, function () {
                                layer.close(index);
                                window.parent.location.reload();
                            });
                        }
                        else if (result.data.status == 0) {
                            layer.alert(result.data.msg, { icon: 0, title: '提示框' });
                            //that.msg = result.data.msg;
                        }
                        else if (result.data.status == 302) {
                            window.location.href = result.data.data;
                        }
                    });
                });
            }
        },
        mounted: function () {
            this.$http.post('/admin/merchant/list', { mobile: this.mobile, startTime: startTime, endTime: endTime, pageIndex: 1 }, { emulateJSON: true }).then(function (result) {                
                if (result.data.status == 1) {
                    this.platformUsers = result.data.data.platformUsers;
                    this.pageHtml = result.data.data.pageHtml;
                    this.pages = result.data.data.pages;
                    this.pagecount = result.data.data.pageCount;
                }
                else if (result.data.status == 302) {
                    window.location.href = result.data.data;
                }
            });
        }
    });

    laydate({
        elem: '#startTime',
        event: 'focus'
    });
    laydate({
        elem: '#endTime',
        event: 'focus'
    });
</script>
