    <title>系统操作日志</title>
</head>

<body>
    <div id="app">
        <!---->
        <div class="search_style">
            <ul class="search_content clearfix">
                <li><label class="l_f">账号</label><input v-model="mobile" type="text" class="text_add" placeholder="账号" style=" width:150px" /></li>
                <li><label class="l_f">添加时间</label><input type="text" class="inline laydate-icon" id="startTime" style=" margin-left:10px;" />至<input type="text" class="inline laydate-icon" id="endTime" style=" margin-left:10px;" /></li>
                <li style="width:90px;"><button type="button" v-on:click="search" class="btn_search"><i class="icon-search"></i>查询</button></li>
            </ul>
        </div>
        <!---->
        <div class="table_menu_list">
            <table class="table table-striped table-bordered table-hover" id="sample-table">
                <thead>
                    <tr>
                        <th width="80">编号</th>
                        <th width="80">模块</th>
                        <th width="100">操作详情</th>
                        <th width="80">操作账号</th>
                        <th width="80">IP地址</th>
                        <th width="120">备注</th>
                        <th width="100">时间</th>
                    </tr>
                </thead>
                <tbody v-for="log in adminLogs">
                    <tr>
                        <td v-html="log.id"></td>
                        <td v-html="log.permissionTypeName"></td>
                        <td v-html="log.description"></td>
                        <td v-html="log.adminMobile"></td>
                        <td v-html="log.ipAddress"></td>
                        <td v-html="log.tip"></td>
                        <td v-html="log.createTime"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="nextpage">
            <ul id='page' class="pagination">
                <li><a href="javascript:;" v-on:click="getPage(1)">首页</a></li>
                <li><a href="javascript:;" v-on:click="getPage(uppage)">上一页</a></li>
                <li v-for="page in pages" v-on:click="getPage(page.pageIndex)" v-bind:class="page.current"><a href="javascript:;" v-html="page.pageIndex"></a></li>
                <li><a href="javascript:;" v-on:click="getPage(nextpage)">下一页</a></li>
                <li><a href="javascript:;" v-on:click="getPage(pagecount)">尾页</a></li>
            </ul>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    var startTime;
    var endTime;
    var vue = new Vue({
        el: "#app",
        data: {
            class: "", pages: [], uppage: 1, nextpage: 2, adminLogs: [], pagecount: 1,mobile:""
        },
        methods: {
            search: function () {
                startTime = $("#startTime").val();
                endTime = $("#endTime").val();
                this.$http.post('/admin/log/list', { mobile: this.mobile, startTime: startTime, endTime: endTime, pageIndex: 1 }, { emulateJSON: true }).then(function (result) {                    
                    if (result.data.status == 1) {
                        this.adminLogs = result.data.data.adminLogs;
                        this.pageHtml = result.data.data.pageHtml;
                        this.pages = result.data.data.pages;
                        this.pagecount = result.data.data.pageCount;
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                });
            },
            getPage: function (page) {
                if (page == 1) {
                    this.uppage = 1;
                    this.nextpage = 2;
                }
                else if (page > 1) {
                    this.uppage = page - 1;
                    if (this.nextpage < this.pagecount) {
                        this.nextpage = page + 1;
                    }
                    else {
                        this.nextpage = this.pagecount;
                    }
                }
                startTime = $("#startTime").val();
                endTime = $("#endTime").val();
                this.$http.post('/admin/log/list', { mobile: this.mobile, startTime: startTime, endTime: endTime, pageIndex: page }, { emulateJSON: true }).then(function (result) {                   
                    if (result.data.status == 1) {
                        this.adminLogs = result.data.data.adminLogs;
                        this.pageHtml = result.data.data.pageHtml;
                        this.pages = result.data.data.pages;
                        this.pagecount = result.data.data.pageCount;
                    }
                    else if (result.data.status == 302) {
                        window.location.href = result.data.data;
                    }
                });
            }
        },
        mounted: function () {
            this.$http.post('/admin/log/list', { mobile: this.mobile, startTime: startTime, endTime: endTime, pageIndex: 1 }, { emulateJSON: true }).then(function (result) {                
                if (result.data.status == 1) {
                    this.adminLogs = result.data.data.adminLogs;
                    this.pageHtml = result.data.data.pageHtml;
                    this.pages = result.data.data.pages;
                    this.pagecount = result.data.data.pageCount;
                }
                else if (result.data.status == 302) {
                    window.location.href = result.data.data;
                }
            });
        }
    });

    laydate({
        elem: '#startTime',
        event: 'focus'
    });
    laydate({
        elem: '#endTime',
        event: 'focus'
    });
</script>
